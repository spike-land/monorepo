{
  "name": "@spike.land/code-worker",
  "description": "An edge chat service that runs on Cloudflare Workers using Durable Objects",
  "version": "0.9.1",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "yarn prep && npx wrangler publish --env=testing src/index.ts",
    "prepublishOnly": "npx yarn wrangler publish",
    "prep": "yarn c:build && yarn x:build",
    "c:build": "yarn workspace @spike.land/code build",
    "x:build": "esbuild  --bundle --tree-shaking=true --metafile=good.json --format=esm --loader:.html=text --external:__STATIC_CONTENT_MANIFEST --target=es2021 src/index.ts --outdir=dist"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.16.0",
    "esbuild": "0.15.7",
    "miniflare": "^2.7.1"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@spike.land/code": "^0.9.1",
    "typescript": "4.8.2",
    "wrangler": "2.0.28"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "db8e23b83d2dd82efc101eca9d1b5ec76d122df4"
}
