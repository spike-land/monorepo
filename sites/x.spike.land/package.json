{
  "name": "@spike.land/webworkers",
  "description": "An edge chat service that runs on Cloudflare Workers using Durable Objects",
  "version": "0.5.8",
  "module": "./dist/index.mjs",
  "scripts": {
    "deploy": "wrangler publish",
    "bundle": "esbuild --bundle --format=esm --minify --tree-shaking=true --loader:.html=text --target=esnext src/index.ts --outfile=dist/index.mjs",
    "postpublish": "yarn bundle"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.3.0",
    "@cloudflare/wrangler": "1.19.6",
    "@spike.land/cf-npm-site": "^0.5.2",
    "@spike.land/code": "^0.5.8",
    "esbuild": "0.14.10"
  },
  "private": true,
  "dependencies": {
    "@types/websocket": "1.0.4",
    "esbuild-wasm": "0.14.10",
    "textdiff-patch": "1.0.5"
  }
}
