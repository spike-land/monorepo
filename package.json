{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/monorepo.git",
  "author": "Zoltan Erdos <zolika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "push": "yarn install --check-files && yarn build && git add . && git commit -m pre-release && git push && git pull && yarn build && git push",
    "release": "yarn push && lerna publish patch --yes",
    "postrelease": "echo Wait-till-the-package-appears-on-unpkg-then-yarn-deploy",
    "build": "yarn lerna run build --parallel --since main",
    "rebuild": "yarn lerna run build --parallel",
    "docker:build": "yarn lerna run docker:build --parallel",
    "docker:push": "yarn docker:build && yarn lerna run docker:push --parallel"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lerna run build --parallel --since main"
    }
  },
  "devDependencies": {
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "husky": "4.3.0",
    "lerna": "3.22.1"
  }
}
