{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/monorepo.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "xpostinstall": "husky install && yarn lerna link && yarn npm:install && yarn rebuild",
    "start": "sh start.sh",
    "push": "yarn build && git add . && git commit -m pre-release && git push && git pull",
    "release": "lerna publish patch --yes && yarn push",
    "pre:build": "yarn lerna run prebuild --parallel",
    "build": "yarn pre:build && yarn lerna run build --parallel --since b",
    "clean": "lerna run clean && cd packages/smart-monaco-editor && yarn build",
    "rebuild": "yarn lerna run clean --parallel && yarn build",
    "npm:install": "yarn lerna run npm:install --parallel",
    "docker:build": "yarn lerna run docker:build --parallel",
    "docker:push": "yarn docker:build && yarn lerna run docker:push --parallel"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lerna run build --parallel --since b"
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.1.0",
    "@types/prop-types": "15.7.3",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@yarnpkg/plugin-node-modules": "2.3.0",
    "csstype": "3.0.5",
    "husky": "4.3.6",
    "lerna": "3.22.1",
    "typescript": "4.1.3",
    "yarn": "1.22.10"
  },
  "resolutions": {
    "@zedvision/cf-worker": "portal:/home/zed/z/packages/cf-zed-vision",
    "@zedvision/code": "portal:/home/zed/z/packages/code",
    "@devcontainer/cypress": "portal:/home/zed/z/packages/devimages-cypress",
    "@zedvision/emotion-react-renderer": "portal:/home/zed/z/packages/emotion-react-renderer",
    "@devcontainer/eoan-xfce-novnc": "portal:/home/zed/z/packages/eoan-xfce-novnc",
    "@devcontainer/focal-devcontainer": "portal:/home/zed/z/packages/focal-devcontainer",
    "@devcontainer/focal-xfce-vnc": "portal:/home/zed/z/packages/focal-xfce-vnc",
    "@devcontainer/generator": "portal:/home/zed/z/packages/generator",
    "@devcontainer/groovy-devcontainer": "portal:/home/zed/z/packages/groovy-devcontainer",
    "@devcontainer/groovy-xfce-novnc": "portal:/home/zed/z/packages/groovy-xfce-novnc",
    "@devcontainer/hirsute-devcontainer": "portal:/home/zed/z/packages/hirsute-devcontainer",
    "@zedvision/qrious": "portal:/home/zed/z/packages/qrious",
    "@zedvision/shadb": "portal:/home/zed/z/packages/shadb",
    "@zedvision/smart-monaco-editor": "portal:/home/zed/z/packages/smart-monaco-editor",
    "@zedvision/zedvision-site": "portal:/home/zed/z/packages/zed-vision-site"
  }
}
