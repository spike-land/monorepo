{
  "name": "github.com-spike.land",
  "description": "our monorepo",
  "repository": "git@github.com:zerdos/spike.land.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "dockerhub/devimages/*",
    "sites/*"
  ],
  "scripts": {
    "start": "lerna build && yarn open && yarn serve",
    "__hard__reformat": "rm -rf node_modules monorepo &&  git reset --hard HEAD && deno fmt . && yarn && yarn build:prod",
    "open": "open-cli https://localhost:8000/monorepo/packages/code/js/index.html",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "serve": "nodemon ./http2-server/http2-server.mjs",
    "importmap": "yarn lerna importmap",
    "build:code": "yarn lerna build:code",
    "deploy": "yarn build && cd sites/spike.land && yarn deploy",
    "lerna:publish": "yarn lerna lerna:publish",
    "push:prod": "NODE_ENV=production yarn build-and-push",
    "build-and-push": "yarn importmap && yarn re:build && yarn lerna push:prod",
    "re:build": "NODE_ENV=production yarn clean && yarn build",
    "build:all": "lerna run re:build",
    "build:prod": "NODE_ENV=production yarn build:all",
    "docker:build": "lerna docker:build",
    "docker:push": "lerna docker:push",
    "push": "git pull && yarn && git add . && git commit -m push && git push && cd sites/spike.land && NODE_ENV=production  yarn deploy",
    "test": "playwright test tests/*.spec.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@playwright/test": "^1.25.1",
    "@yarnpkg/sdks": "^2.6.3",
    "lerna": "^5.4.3",
    "typescript": "^4.8.2"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@emotion/react": "^11.10.0",
    "@types/react": "18.0.17",
    "@yarnpkg/fslib": "^2.7.1",
    "monaco-editor": "^0.34.0",
    "react": "^18.2.0"
  }
}
