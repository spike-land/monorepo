{
  "name": "monorepo",
  "version": "0.9.1",
  "description": "our monorepo",
  "repository": "git@github.com:zerdos/spike.land.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach --all run  clean",
    "build": "yarn workspaces foreach --all run  build",
    "c:build": "yarn workspace @spike.land/code build",
    "c:deploy": "yarn workspace @spike.land/code-worker deploy",
    "deploy": "yarn c:build && yarn c:deploy",
    "importmap": "yarn workspaces foreach --all run  importmap",
    "build:code": "yarn workspaces foreach --all run build:code",
    "yarn:publish": "yarn workspaces foreach --all run  yarn workspaces foreach --all run publish",
    "push:prod": "NODE_ENV=production yarn build-and-push",
    "re:build": "NODE_ENV=production yarn clean && yarn build",
    "build:all": "yarn workspaces foreach --all run   run re:build",
    "build:prod": "NODE_ENV=production yarn build:all",
    "docker:build": "yarn workspaces foreach --all run   docker:build",
    "docker:push": "yarn workspaces foreach --all run   docker:push",
    "push": "yarn fmt && yarn deploy && git pull && yarn && git add . && git commit -m push && git push && yarn fmt",
    "test": "xo && NODE_OPTIONS=--experimental-fetch yarn p:test",
    "p:test": "playwright test tests/*.spec.ts",
    "fmt": "dprint fmt \"**/*.{ts,tsx,js,jsx,json,mjs}\""
  },
  "devDependencies": {
    "@emotion/react": "^11.10.5",
    "@playwright/test": "1.28.1",
    "@types/eslint": "^8.4.10",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/xo": "^0.39.5",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@yarnpkg/sdks": "3.0.0-rc.32",
    "dprint": "^0.33.0",
    "esbuild": "^0.16.3",
    "eslint": "^8.29.0",
    "eslint-plugin-react": "^7.31.11",
    "playwright": "1.28.1",
    "typescript": "^4.9.4",
    "xo": "^0.53.1"
  },
  "resolutions": {
    "wrangler/esbuild": "0.15.11"
  },
  "packageManager": "yarn@4.0.0-rc.32",
  "dependencies": {
    "react": "^18.2.0"
  }
}
