{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/monorepo.git",
  "author": "Zoltan Erdos <zerdos@zed.vision>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "tutorials/*"
  ],
  "scripts": {
    "postinstall": "yarn clean && rm -rf .parcel-cache",
    "format": "yarn prettier . --write",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "docker": "docker build --build-arg USER=$USER -f packages/focal-devcontainer/Dockerfile . -t focal-local",
    "dev": "yarn wsrun -a dev ",
    "clean": "yarn wsrun -a -m clean",
    "release": "yarn xbuild && yarn docker:build && yarn test && lerna publish && yarn push",
    "xbuild": "(yarn xxx build || echo fail) && yarn xxx generate:dockerfile",
    "test": "yarn xxx tests",
    "docker:build": "yarn xxx docker:build",
    "docker:push": "yarn xxx docker:push",
    "xxx": "yarn wsrun --parallel --exclude-missing"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn xbuild"
    }
  },
  "devDependencies": {
    "@types/chrome": "0.0.124",
    "@types/react": "16.9.50",
    "@types/react-dom": "16.9.8",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-react": "7.21.2",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "npm-run-all": "4.1.5",
    "parcel": "1.12.4",
    "prettier": "2.1.2",
    "serve": "11.3.2",
    "typescript": "4.0.3",
    "wsrun": "5.2.2"
  }
}
