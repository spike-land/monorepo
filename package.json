{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/monorepo.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "cloudflare/zed-vision",
    "cloudflare/code-zed-vision",
    "packages/code/js/shadb"
  ],
  "scripts": {
    "xpostinstall": "husky install && yarn lerna link && yarn npm:install && yarn rebuild",
    "build:renderer": "cd packages/emotion-react-renderer && yarn build",
    "start": "yarn build:renderer && sh start.sh",
    "deploy:cf-code-zed-vision": "cd cloudflare/code-zed-vision && yarn deploy",
    "deploy": "yarn lerna run deploy",
    "push": "yarn start && yarn deploy:cf-code-zed-vision && yarn build && git add . && git commit -m pre-release && git push && git pull",
    "release": "lerna publish patch --yes && yarn push",
    "clean": "yarn lerna run clean --parallel --since b",
    "pre:build": "yarn lerna run prebuild --parallel --since b",
    "build": "yarn pre:build && yarn lerna run build --parallel --since b",
    "rebuild": "yarn lerna run clean --parallel && yarn build",
    "npm:install": "yarn lerna run npm:install --parallel",
    "docker:build": "yarn lerna run docker:build --parallel",
    "docker:push": "yarn docker:build && yarn lerna run docker:push --parallel"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.1.0",
    "@types/prop-types": "15.7.3",
    "@types/react": "17.0.1",
    "@types/react-dom": "17.0.0",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "@yarnpkg/plugin-node-modules": "2.3.0",
    "csstype": "3.0.6",
    "eslint": "7.19.0",
    "eslint-plugin-react": "7.22.0",
    "lerna": "3.22.1",
    "typescript": "4.2.0-dev.20210207",
    "yarn": "1.22.10"
  }
}
