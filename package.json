{
  "name": "monorepo",
  "version": "0.9.1",
  "description": "our monorepo",
  "repository": "git@github.com:zerdos/spike.land.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf packages/code/dist && yarn workspaces foreach --all run clean",
    "build": "yarn workspaces foreach --all run build",
    "types": "yarn workspaces foreach --all run types",
    "test": "yarn workspaces foreach --all run test",
    "shasum": "ipfs add --only-hash -r -Q packages/code/dist | awk '{print \"export default `\"; print $1; print\"`.trim();\" }'  > packages/code/dist/dist.shasum.js",
    "c:build": "yarn workspace @spike.land/code build",
    "c:deploy": "yarn workspace @spike.land/code-worker deploy",
    "deploy": "yarn clean && yarn c:build && yarn shasum && yarn c:deploy && yarn types",
    "importMap": "yarn workspaces foreach --all run  importMap",
    "build:code": "yarn workspaces foreach --all run build:code",
    "yarn:publish": "yarn workspaces foreach --all run  yarn workspaces foreach --all run publish",
    "push:prod": "NODE_ENV=production yarn build-and-push",
    "re:build": "NODE_ENV=production yarn clean && yarn build",
    "build:all": "yarn workspaces foreach --all run   run re:build",
    "build:prod": "NODE_ENV=production yarn build:all",
    "docker:build": "yarn workspaces foreach --all run   docker:build",
    "docker:push": "yarn workspaces foreach --all run   docker:push",
    "push": "yarn fmt && yarn deploy && git pull && yarn && yarn fmt && git add . && git commit -m push && git push",
    "p:test": "playwright test tests/*.spec.ts",
    "fmt": "dprint fmt \"**/*.{ts,tsx,js,jsx,json,mjs}\""
  },
  "dependencies": {
    "@cloudflare/workers-types": "4.20230321.0",
    "@emotion/react": "11.10.6",
    "@isomorphic-git/lightning-fs": "4.6.0",
    "@playwright/test": "1.32.1",
    "@types/eslint": "8.37.0",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "constants": "0.0.2",
    "cypress": "12.9.0",
    "dprint": "0.35.3",
    "eslint": "8.37.0",
    "eslint-plugin-react": "7.32.2",
    "localforage": "1.10.0",
    "monaco-editor": "0.36.1",
    "playwright": "1.32.1",
    "react": "18.2.0",
    "typescript": "5.0.3",
    "util": "0.12.5",
    "utils": "0.3.1"
  },
  "devDependencies": {
    "js-tokens": "8.0.1"
  },
  "packageManager": "yarn@4.0.0-rc.42"
}
