{
  "name": "github.com-spike.land",
  "description": "our monorepo",
  "repository": "git@github.com:spike-land/monorepo.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "dockerhub/devimages/*",
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "screenshot": "rm -rf spike.land-1920x1080.png && npx pageres-cli https://code.spike.land 1920x1080 --delay=5 --scale=1",
    "importmap": "node packages/code/scripts/importmapGenerator.mjs > packages/code/js/importmap.json",
    "build:renderer": "cd packages/renderer && yarn build",
    "build:code": "cd packages/code && yarn build",
    "build:editor": "cd packages/smart-monaco-editor && yarn build",
    "start": "yarn build:editor && yarn build:renderer && yarn build:code && sh start.sh",
    "deploy:worker": "lerna run deploy",
    "deploy": "yarn lerna run deploy",
    "push": "yarn start && yarn deploy:worker && yarn build && git add . && git commit -m pre-release && git push && git pull",
    "release": "lerna publish patch --yes && yarn push",
    "clean": "yarn lerna run clean --parallel --since main",
    "pre:build": "yarn lerna run prebuild --parallel --since main",
    "build": "yarn pre:build && yarn lerna run build --parallel --since main",
    "re:build": "yarn lerna run clean --parallel && yarn build"
  },
  "dependencies": {
    "latest-version": "6.0.0",
    "path": "0.12.7",
    "react": "17.0.2",
    "workbox-window": "6.4.1"
  },
  "devDependencies": {
    "axios": "0.24.0",
    "console-log-json": "2.8.0",
    "csstype": "3.0.10",
    "eslint-plugin-react": "7.27.0",
    "lerna": "4.0.0",
    "typescript": "4.4.4",
    "yarn": "1.22.17"
  }
}
