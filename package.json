{
  "name": "monorepo",
  "version": "0.9.55",
  "description": "our monorepo",
  "repository": "git@github.com:zerdos/spike.land.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf packages/code/dist && yarn workspaces foreach -A run clean",
    "build": "yarn workspaces foreach -A run build",
    "types": "yarn workspaces foreach -A run types",
    "test": "yarn workspaces foreach -A run test",
    "c:build": "yarn workspace @spike-land/code build",
    "c:deploy": "yarn workspace @spike-land/code-worker deploy",
    "deploy": "yarn clean && yarn c:build && yarn c:deploy && yarn types",
    "importMap": "yarn workspaces foreach run importMap",
    "build:code": "yarn workspaces foreach run build:code",
    "yarn:publish": "yarn workspaces foreach run publish",
    "push:prod": "NODE_ENV=production yarn build-and-push",
    "re:build": "NODE_ENV=production yarn clean && yarn build",
    "build:all": "yarn workspaces foreach run re:build",
    "build:prod": "NODE_ENV=production yarn build:all",
    "docker:build": "yarn workspaces foreach run docker:build",
    "docker:push": "yarn workspaces foreach run docker:push",
    "push": "yarn fmt && yarn deploy && git pull && yarn && yarn fmt && git add . && git commit -m push && git push",
    "p:test": "playwright test tests/*.spec.ts",
    "fmt": "dprint fmt \"**/*.{ts,tsx,js,jsx,json,mjs}\"",
    "ai-commit": "ai-commit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20240725.0",
    "@emotion/react": "11.13.0",
    "@playwright/test": "1.45.3",
    "@spike-land/ai-devtools": "workspace:^",
    "@types/eslint": "9.6.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@yarnpkg/sdks": "3.1.3",
    "dprint": "0.47.2",
    "eslint": "9.8.0",
    "eslint-plugin-react": "7.35.0",
    "playwright": "1.45.3",
    "react": "18.3.1",
    "typescript": "5.5.4"
  },
  "packageManager": "yarn@4.3.1",
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "i18next": "^23.12.2"
  }
}
