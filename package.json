{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/monorepo.git",
  "author": "Zoltan Erdos <zolika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "yarn check --integrity --verify-tree && yarn build && git add . && git commit -m pre-release && git push &&  git pull && lerna publish && yarn docker:push && git push",
    "build": "yarn lerna run build --parallel --since main",
    "docker:push": "yarn lerna run docker:push --parallel"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lerna run build --parallel --since main"
    }
  },
  "devDependencies": {
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "husky": "4.3.0",
    "lerna": "3.22.1"
  }
}
