{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/projects.git",
  "author": "Zoltan Erdos <zerdos@zed.vision",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "yarn prettier .  --write",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "docker": "docker build --build-arg USER=$USER -f packages/focal-devcontainer/Dockerfile . -t focal-local",
    "dev": "yarn wsrun -a dev",
    "clean": "yarn wsrun -a clean",
    "release": "yarn build && yarn docker:build && yarn test && lerna publish && yarn push",
    "build": "yarn xxx build && yarn xxx generate:dockerfile",
    "test": "yarn xxx tests",
    "docker:build": "yarn xxx docker:build",
    "docker:push": "yarn xxx docker:push",
    "xxx": "yarn wsrun --paralell --exclude-missing",
    "push": "yarn build && yarn xxx docker:push"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build"
    }
  },
  "devDependencies": {
    "@devcontainer/focal-devcontainer": "5.1.3",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-react": "7.19.0",
    "husky": "4.2.3",
    "lerna": "3.20.2",
    "npm-run-all": "4.1.5",
    "parcel": "2.0.0-nightly.203",
    "prettier": "2.0.4",
    "serve": "11.3.0",
    "typescript": "3.8.3",
    "wsrun": "5.2.0"
  }
}
