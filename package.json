{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/monorepo.git",
  "author": "Zoltan Erdos <zerdos@zed.vision>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "tutorials/*"
  ],
  "scripts": {
    "format": "yarn prettier . --write",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "docker": "docker build --build-arg USER=$USER -f packages/focal-devcontainer/Dockerfile . -t focal-local",
    "dev": "yarn wsrun -a dev ",
    "release": "git pull && lerna publish && git push",
    "xbuild": "(yarn xxx build || echo fail) && yarn xxx generate:dockerfile",
    "test": "yarn xxx tests",
    "docker:build": "yarn xxx docker:build",
    "docker:push": "yarn xxx docker:push",
    "xxx": "yarn wsrun --parallel --exclude-missing"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lerna run build --since"
    }
  },
  "devDependencies": {
    "@types/react": "16.9.54",
    "@types/react-dom": "16.9.9",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "eslint": "7.12.1",
    "eslint-plugin-react": "7.21.5",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "npm-run-all": "4.1.5",
    "serve": "11.3.2",
    "typescript": "4.0.5",
    "wsrun": "5.2.4"
  },
  "dependencies": {
    "https-localhost": "^4.6.3"
  }
}
