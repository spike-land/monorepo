{
  "name": "z",
  "version": "1.0.0",
  "description": "[Real time React page editor, in typescript! ![Screenshot](./spike.land-1920x1080.png)](https://spike.land)",
  "devDependencies": {
    "@cloudflare/workers-types": "3.4.0",
    "@jspm/generator": "1.0.0-beta.30",
    "@playwright/test": "1.20.2",
    "esbuild": "0.14.32",
    "lerna": "4.0.0",
    "open-cli": "7.0.1",
    "rimraf": "3.0.2",
    "speed-limiter": "1.0.2",
    "typescript": "4.6.3",
    "wait-on": "6.0.1",
    "wrangler": "0.0.24",
    "yarn": "1.22.18"
  },
  "scripts": {
    "start": "yarn ws:yarn build && yarn open && yarn serve",
    "open": "open-cli https://localhost:8000/monorepo/packages/code/js/index.html",
    "clean": "yarn ws:yarn clean",
    "serve": "nodemon ./http2-server/http2-server.mjs",
    "push": "NODE_ENV=production yarn ws:yarn push",
    "importmap": "yarn ws:yarn importmap",
    "build:code": "yarn ws:yarn build:code",
    "deploy": "yarn ws:yarn deploy",
    "lerna:publish": "yarn ws:yarn lerna:publish",
    "push:prod": "NODE_ENV=production yarn build-and-push",
    "build-and-push": "yarn importmap && yarn re:build && yarn ws:yarn push:prod",
    "re:build": "yarn ws:yarn re:build",
    "build:all": "yarn ws:yarn re:build",
    "build:prod": "NODE_ENV=production yarn ws:yarn build",
    "docker:build": "yarn ws:yarn docker:build",
    "docker:push": "yarn ws:yarn docker:push",
    "postinstall": "cd monorepo && yarn",
    "ws:yarn": "yarn --cwd monorepo ",
    "lerna": "lerna",
    "open-cli": "open-cli",
    "pw": "playwright",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
