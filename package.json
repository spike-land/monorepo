{
  "name": "zedvision",
  "description": "our monorepo",
  "repository": "git@github.com:zed-vision/projects.git",
  "author": "Zoltan Erdos <zerdos@zed.vision",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn docker || echo no docker",
    "format": "yarn prettier .  --write",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "docker": "docker build --build-arg USER=$USER -f node_modules/@devcontainer/focal-devcontainer/Dockerfile . -t focal-local",
    "dev": "yarn wsrun -a dev",
    "clean":  "yarn wsrun -a clean"
  },
  "devDependencies": {
    "@devcontainer/focal-devcontainer": "5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "lerna": "3.20.2",
    "npm-run-all": "4.1.5",
    "parcel": "nightly",
    "prettier": "^2.0.2",
    "serve": "11.3.0",
    "typescript": "3.8.3",
    "wsrun": "5.2.0"
  }
}
