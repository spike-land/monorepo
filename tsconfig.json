{
  // This is based on https://deno.land/manual/getting_started/typescript#custom-typescript-compiler-options
  // then the defaults are removed.
 
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Deno",
 
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["WebWorker", "dom", "dom.iterable", "ESNext"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true
  },
  "exclude": ["packages/cf-code-zed-vision/dist", "packages/zed-vision-site", "node_modules", "packages/monaco-editor"]
}
 