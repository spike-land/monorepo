{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "ESNext.Promise", "ES2015", "es2024.Promise"],
    "isolatedModules": true,
    "strict": true,
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": []
  }
}
