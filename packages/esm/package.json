{
  "name": "@spike.land/esm",
  "version": "0.2.42",
  "description": "esm modules for packages with maintainers from the 2015",
  "main": "dist/react.mjs",
  "files": [
    "**/*"
  ],
  "authors": [
    "Zoltan Erdos <zolika84@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/spike-land/monorepo"
  },
  "exports": {
    "./react.mjs": "./dist/react.mjs",
    "./react-dom.mjs": "./dist/react-dom.mjs",
    "./react-is.mjs": "./dist/react-is.mjs",
    "./framer-motion.mjs": "./dist/framer-motion.mjs",
    "./textdiff-create.mjs": "./dist/textdiff-create.mjs",
    "./textdiff-patch.mjs": "./dist/textdiff-patch.mjs",
    "./ipfs-only-hash.mjs": "./dist/ipfs-only-hash.mjs"
  },
  "typings": "dist/types/*",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "esbuild": "0.14.3",
    "framer-motion": "5.4.5",
    "ipfs-only-hash": "4.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "textdiff-create": "1.0.5",
    "textdiff-patch": "1.0.5"
  },
  "devDependencies": {
    "rollup": "2.61.1",
    "rollup-plugin-dts": "4.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:react && yarn build:react-is && yarn build:react-dom && yarn build:framer-motion && yarn build:ipfs-only-hash && yarn build:textdiff-create && yarn build:textdiff-patch && yarn dts:framer-motion",
    "build:react": "yarn esbuild --bundle src/react.mjs --format=esm --outfile=dist/react.mjs",
    "build:react-is": "yarn esbuild --bundle src/react-is.mjs --format=esm --outfile=dist/react-is.mjs",
    "build:react-dom": "yarn esbuild --bundle src/react-dom.mjs --external:react --external:react-is  --format=esm --outfile=dist/react-dom.mjs",
    "build:ipfs-only-hash": "yarn esbuild --bundle src/ipfs-only-hash.mjs --minify --tree-shaking=true --external:tslib --format=esm --outfile=dist/ipfs-only-hash.mjs",
    "build:framer-motion": "yarn esbuild --bundle src/framer-motion.mjs --minify --tree-shaking=true --external:tslib --format=esm --external:react --external:@emotion/is-prop-valid --outfile=dist/framer-motion.mjs",
    "dts:framer-motion": "rollup -c framer-motion.rollup.config.js",
    "build:textdiff-create": "yarn esbuild --bundle src/textdiff-create.mjs --minify --tree-shaking=true --format=esm  --outfile=dist/textdiff-create.mjs",
    "build:textdiff-patch": "yarn esbuild --bundle src/textdiff-patch.mjs --minify --tree-shaking=true --format=esm  --outfile=dist/textdiff-patch.mjs"
  },
  "private": false,
  "gitHead": "fa5861e9f08ea403ece080657618ef985cc30fa5"
}
