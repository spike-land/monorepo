{
  "name": "@spike.land/smart-monaco-editor",
  "version": "0.0.84",
  "description": "Monaco Editor with auto type downloads mostly for React",
  "sideEffects": false,
  "main": "./dist/editor.mjs",
  "typings": "src/editor.d.ts",
  "scripts": {
    "build": "esbuild --bundle src/editor.ts --format=esm --target=es2018 --outfile=dist/editor.mjs",
    "clean": "rm -rf dist tsconfig.tsbuildinfo && yarn format && mkdir dist",
    "format": "deno fmt ."
  },
  "keywords": [
    "monaco",
    "editor",
    "react",
    "html",
    "vscode"
  ],
  "authors": [
    "Zoltan Erdos <zolika84@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spike-land/monorepo"
  },
  "homepage": "https://github.com/spike-land/monorepo",
  "repository": "https://github.com/spike-land/monorepo",
  "devDependencies": {
    "esbuild": "0.13.14",
    "typescript": "4.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "76edbb42329bec617e43dd43cc2d16d542311195",
  "dependencies": {
    "monaco-editor": "0.30.1",
    "p-all": "4.0.0"
  }
}
