{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "tsBuildInfoFile": "chrome-extension/tsc/.buildinfo",
    "lib": [
      "es2018",
      "DOM",
      "ScriptHost",
      "DOM.Iterable",
      "ES2015",
      "ESNext.BigInt"
    ],
    "noImplicitAny": true,
    "outDir": "chrome-extension/tsc",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
