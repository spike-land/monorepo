{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "types": []
  },

  "include": [
    "src"
  ]
}
