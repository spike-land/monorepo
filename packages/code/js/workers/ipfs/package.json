{
  "name": "@zedvision/ipfs",
  "version": "11.10.18",
  "sideEffects": false,
  "files": [
    "*/*"
  ],
  "keywords": [
    "ipfs"
  ],
  "authors": [
    "Zoltan Erdos <zolika84@gmail.com>"
  ],
  "scripts": {
    "clean": "rm -rf dist && yarn types",
    "types": "yarn tsc -d",
    "cp:ipfs": "cp ../../../../../node_modules/ipfs/dist/index.min.js node_legacy/ipfs.min.js",
    "cp:server": "cp ../../../../../node_modules/ipfs/dist/index.min.js node_legacy/server.min.js",
    "build:client": "yarn esbuild  src/ipfs.client.ts --bundle --platform=browser --minify --format=esm --outfile=dist/ipfs.client.js",
    "build:server": "yarn esbuild  src/ipfs.server.ts --bundle --platform=browser --minify --format=iife --outfile=dist/ipfs.server.js",
    "cp": "rm -rf node_legacy/* && yarn cp:ipfs && yarn cp:server",
    "build": "yarn build:client && yarn build:server"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zed-vision/monorepo"
  },
  "homepage": "https://github.com/zed-vision/monorepo",
  "repository": "https://github.com/zed-vision/monorepo",
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "4ce53f6c1ec82734658b26195f6410696b8d2d9b",
  "devDependencies": {
    "esbuild": "0.8.34",
    "ipfs": "0.53.2",
    "ipfs-message-port-client": "0.4.6",
    "ipfs-message-port-server": "0.5.0",
    "it-all": "^1.0.4",
    "typescript": "4.1.3",
    "uint8arrays": "^2.0.5"
  }
}
