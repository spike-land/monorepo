{
    "name": "@zedvision/code",
    "version": "6.3.0",
    "description": "Monaco Editor for React",
    "main": "code.zed-vision.min.js",
    "sideEffects": false,
    "scripts": {
        "clean": "rm code-box* code.zed*",
        "build": "yarn build-codebox &&yarn minify &&yarn build-template && yarn build-bundle",
        "build-bundle": "deno bundle src-deno/index.ts src/index.js --no-check",
        "build-template": " deno run --allow-read --allow-write html.ts ",
        "deploy": "wrangler build && wrangler publish",
        "build-codebox": "deno fmt src-deno && deno bundle src-deno/frontend/codeBox.ts --no-check > code-box-bundle.js ",
        "minify": "yarn esbuild code-box-bundle.js --minify --outfile=code.zed-vision.min.js",
        "serve": "file_server  ."
    },
    "keywords": [
        "monaco",
        "editor",
        "react",
        "html",
        "vscode"
    ],
    "authors": [
        "Zoltan Erdos <zolika84@gmail.com>"
    ],
    "bugs": {
        "url": "https://github.com/zed-vision/monorepo"
    },
    "homepage": "https://code.zed.vision",
    "repository": "https://github.com/zed-vision/monorepo",
    "devDependencies": {
        "@cloudflare/workers-types": "2.1.0",
        "@cloudflare/wrangler": "1.12.1",
        "@types/webpack-env": "1.15.3",
        "@zedvision/code": "6.1.2",
        "@zedvision/smart-monaco-editor": "^6.3.0",
        "capture-website": "1.2.4",
        "esbuild": "0.8.0",
        "smart-monaco-editor": "6.1.4",
        "typescript": "4.0.5",
        "webpack": "5.3.2",
        "webpack-cli": "4.1.0"
    },
    "gitHead": "db133fb2edf1a37f0e340e26d8aa28c8763b93c2",
    "author": "Zoltan Erdos <zolika84@gmail.com>",
    "license": "BSD-3-Clause",
    "private": false,
    "publishConfig": {
        "access": "public"
    }
}
