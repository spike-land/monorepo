{
    "name": "@zedvision/code",
    "version": "10.11.2",
    "description": "zed.vison/code",
    "main": "dist/codeLoader.min.js",
    "files": [
        "**/*"
    ],
    "source": "./src/codeLoader.js",
    "exports": "./dist/codeLoader.modern.js",
    "scripts": {
        "npm:install": "rm -rf package-lock.json && npm install",
        "clean": "rm -rf dist && mkdir dist && deno fmt src",
        "xbuild:sw": "workbox generateSW workbox-config.js",
        "build:sw": "yarn esbuild --loader:.ts=ts src/sw.ts --outfile=sw.js",
        "obuild:sw": "deno bundle  --unstable --import-map ../../import_map.json --no-check src/sw.ts sw.js",
        "xxbuild": "cp -rf ../smart-monaco-editor/lib/editor.min.js dist/ && deno bundle --unstable --import-map ../../import_map.json --no-check src/codeBox.ts dist/codeLoader.js",
        "build": "microbundle ./src/codeLoader.js || echo Ok",
        "watch": "microbundle watch",
        "minify": "yarn esbuild dist/codeLoader.js --minify --outfile=dist/codeLoader.min.js"
    },
    "keywords": [
        "monaco",
        "editor",
        "react",
        "typescript",
        "html",
        "vscode"
    ],
    "authors": [
        "Zoltan Erdos <zolika84@gmail.com>"
    ],
    "bugs": {
        "url": "https://github.com/zed-vision/monorepo"
    },
    "homepage": "https://code.zed.vision",
    "repository": "https://github.com/zed-vision/monorepo",
    "devDependencies": {
        "comlink": "^4.3.0",
        "esbuild": "0.8.26",
        "ipfs": "^0.52.3",
        "prettier": "^2.2.1",
        "react": "^17.0.1"
    },
    "gitHead": "af54e6ff16c9c20b6fba6365c211999fedeae2aa",
    "author": "Zoltan Erdos <zolika84@gmail.com>",
    "license": "BSD-3-Clause",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@babel/standalone": "^7.12.11",
        "@emotion/react": "^11.1.4",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "framer-motion": "^3.1.1",
        "idb": "^5.0.8",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-dom-server": "^0.0.5"
    }
}
