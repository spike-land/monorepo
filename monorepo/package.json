{
  "name": "github.com-spike.land",
  "description": "our monorepo",
  "repository": "git@github.com:spike-land/monorepo.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "dockerhub/devimages/*",
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "screenshot": "rm -rf spike.land-1920x1080.png && npx pageres-cli https://spike.land 1920x1080 --delay=5 --scale=1",
    "build:code": "cd packages/code && yarn build",
    "deploy:worker": "lerna run deploy",
    "deploy": "cd sites/spike.land && yarn deploy",
    "push:prod": "yarn push && lerna publish patch --yes && yarn deploy && git add . && (git commit -m pre-release || echo nothing) && git push",
    "importmap": "cd packages/code && yarn importmap",
    "push": "yarn build && cd .. && git add . && (git commit -m pre-release || echo nothing) && git push && git pull",
    "release": "lerna publish patch --yes && yarn push",
    "clean": "lerna run clean --parallel",
    "lerna:publish": "lerna publish",
    "build": "lerna run build --parallel --since main",
    "build:all": "lerna run build --parallel --since main --no-bail",
    "re:build": "yarn clean && yarn build",
    "docker:build": "lerna run docker:build",
    "docker:push": "lerna run docker:push"
  },
  "dependencies": {
    "@cloudflare/workers-types": "3.4.0",
    "@jspm/generator": "1.0.0-beta.22",
    "lerna": "4.0.0",
    "typescript": "4.5.5",
    "wrangler": "0.0.16"
  }
}
