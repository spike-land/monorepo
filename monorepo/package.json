{
  "name": "github.com-spike.land",
  "description": "our monorepo",
  "repository": "git@github.com:spike-land/monorepo.git",
  "author": "Zoltan Erdos <zoliika84@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "dockerhub/devimages/*",
    "packages/*",
    "sites/*"
  ],
  "type": "module",
  "scripts": {
    "screenshot": "rm -rf spike.land-1920x1080.png && npx pageres-cli https://code.spike.land 1920x1080 --delay=5 --scale=1",
    "build:code": "cd packages/code && yarn build",
    "build:editor": "cd packages/smart-monaco-editor && yarn build",
    "deploy:worker": "lerna run deploy",
    "deploy": "cd sites/code.spike.land && yarn deploy",
    "push:prod": "yarn re:build && yarn push && lerna publish patch --yes && yarn deploy && git add . && (git commit -m pre-release || echo nothing) && git push",
    "importmap": "cd packages/code && yarn importmap",
    "push": "yarn && yarn build:editor && yarn build:code && cd .. && git add . && (git commit -m pre-release || echo nothing) && git push && git pull",
    "release": "lerna publish patch --yes && yarn push",
    "clean": "lerna run clean --parallel",
    "build": "lerna run build --parallel --since main --no-bail",
    "re:build": "yarn clean && yarn build"
  },
  "dependencies": {
  },
  "devDependencies": {
  }
}
